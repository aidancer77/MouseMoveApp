<Window x:Class="MouseMoveApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseMoveApp"
        mc:Ignorable="d"
        Title="Application" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="DarkGray" MouseDown="Grid_MouseDown" MouseMove="Grid_MouseMove">
        
        <Button x:Name="DataBase" Content="Подключение к БД" 
                Width="140" Height="30" VerticalAlignment="Top" 
                Margin="0,20,0,0" Click="DataBase_Click"/>

        <Button x:Name="Login" Content="Авторизоваться" 
                Width="140" Height="30" VerticalAlignment="Top" 
                Margin="0,20,0,0" Click="Login_Click"/>

        <Button x:Name="Start" Content="Запуск" 
                Width="140" Height="30" VerticalAlignment="Top" 
                Margin="0,20,0,0" Click="Start_Click"/>

        <Button x:Name="Stop" Content="Стоп" 
                Width="140" Height="30" VerticalAlignment="Top" 
                Margin="0,20,0,0" Click="Stop_Click"/>
    </Grid>
</Window>
